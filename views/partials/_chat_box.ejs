<div class="container-fluid" id="main-container">
    <div class="row h-100">
        <div class="col-12 col-sm-5 col-md-4 d-flex flex-column" id="chat-list-area" style="position:relative;">
            
            <!-- Chat List -->
            <div class="d-flex flex-column w-100" id="profile-settings">
                <div class="row d-flex flex-row align-items-center p-2 m-0"
                    style="background:#000000; min-height:65px;">
                    <i class="fas fa-arrow-left p-2 mx-3 my-1 text-white" style="font-size: 1.5rem; cursor: pointer;"
                        onclick="hideProfileSettings()"></i>
                    <div class="text-white font-weight-bold">
                        <%= username %>
                    </div>
                </div>
                <div class="d-flex flex-column" style="overflow:auto;">

                </div>

            </div>
            <div class="d-flex flex-column w-100" style="height: 500px; overflow:auto;">
                <% active_conversation.forEach(function(conv) { %>
                    <button type="button" class="btn btn-light">
                        <%= conv %>
                    </button>
                    <% }) %>
            </div>
        </div>

        <!-- Message Area -->
        <div class="col">
        <div class="d-none d-sm-flex flex-column col-12 col-sm-7 col-md-12 p-0 h-80" id="message-area" style="background-color:rgb(255, 245, 240);">
            <div class="d-flex flex-column w-100 h-10 bg-purple rounded shadow-sm "
                style="height: 500px; overflow:auto;">
                <% active_conversation.forEach(function(conv) { %>
                    <h1 class="h6  text-yellow">
                        <%= conv %>
                    </h1>
                    <% }) %>
            </div>
        </div>
    <!-- </div> -->
<!-- </div> -->