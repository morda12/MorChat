<%-include('./partials/_header');%>
  <body>
    <%-include('./partials/_nav');%>
    <div class=" w-50 py-5 m-auto col-md-7 col-lg-8">
      <h4 data-test="register-title" class="mb-3">Register</h4>
      </header>
      <% var err_idx = 0;%>
      <% if(message.errors){ %>
        <% message.errors.forEach(function(error) { %>
          <div data-test=<%=`register-error-message-${err_idx}`%> class="alert alert-danger" role="alert"><%= error %></div>
          <% err_idx = err_idx+1 %>
          <% })} %>
      <form class="needs-validation" method="post" action="/users/register">
        <div class="row g-3">
          <div class="col-sm-6">
            <label for="firstname" class="form-label">First name</label>
            <input data-test="first-name-input" type="text" class="form-control" name="firstname" id="firstname" placeholder="First name" value="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>

          <div class="col-sm-6">
            <label for="lastname" class="form-label">Last name</label>
            <input data-test="last-name-input" type="text" class="form-control" name="lastname" id="lastname" placeholder="last name" value="" required>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>

          <div class="col-12">
            <label for="username" class="form-label">username</label>
            <div class="input-group has-validation">
              <input data-test="username-input" type="text" class="form-control" name="username" id="username" placeholder="username" required>
            <div class="invalid-feedback">
                Your username is required.
              </div>
            </div>
          </div>

          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input data-test="email-input" type="email" class="form-control" name="email" id="email" placeholder="you@example.com">
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
          </div>
          <div class="col-12">
            <label for="password1" class="form-label">Password</label>
            <div class="input-group has-validation">
              <input data-test="password1-input" type="password" class="form-control" name="password1" id="password1" placeholder="Password" required>
            <div class="invalid-feedback">
              Please enter a valid password.
              </div>
            </div>
          </div>

          <div class="col-12">
            <label for="password2" class="form-label">Confirm password</label>
            <div class="input-group has-validation">
              <input data-test="password2-input" type="password" class="form-control" name="password2" id="password2" placeholder="Confirm Password" required>
            <div class="invalid-feedback">
              Please enter a valid password.
              </div>
            </div>
            <hr class="my-4">
          </div>
          
        <button data-test="submit-button" class="w-100 btn btn-primary btn-lg" type="submit" value="Submit">Register</button>
      </form>
      <section>
        <h2>***</h2>
        <p>
          ***
        </p>
      </section>
      <%-include('./partials/_footer');%>
    </div>
  </body>
</html>